/*
	Dies ist die css-Datei, in der das Layout des Graphen beschrieben ist.
*/

/*
	Style-Angabe fuer einen Knoten
*/
node {
	size: 30px;
	
	fill-color: #99ccff;
	
	text-color: black;
	text-alignment: under;
	text-size: 14;

	stroke-mode: plain;
	stroke-color: white;
	stroke-width: 0px;
}

/*
   zusaetzliches Attribut "highlight" fuer einen Knoten, der
   hervorgehoben werden soll
*/
node.highlight {
	text-style: bold;
	
	stroke-color: #cc0000;
	stroke-width: 3px;
}

node.place {

}
node.red {
	
}

node.abort {
	fill-color: "orange";
}

node.transition {
	shape: box;
}

node.marking {
	shape: box;
}

node.marked {
	fill-color: red;
}

node.root {
	fill-color: red;
}

node.has0Tokens {
	fill-mode: image-scaled;
	fill-image: url('ressources/images/none.png');
}
