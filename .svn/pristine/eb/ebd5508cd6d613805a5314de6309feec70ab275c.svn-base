/*
	Style-Angabe fuer eine Kante
*/
edge {
	fill-color: #003366;
	text-color: #003366;
	arrow-shape: arrow;
	arrow-size: 9px, 6px;
	text-size:  12;
	text-color: purple;
}

edge.abort {
	fill-color: orange;
	text-color: #003366;
	arrow-shape: arrow;
	arrow-size: 9px, 6px;
	text-size: 12;
	text-color: purple;
}
