/*
	Dies ist die css-Datei, in der das Layout des Graphen beschrieben ist.
*/

/*
	Style-Angabe fuer einen Knoten
*/
node {
	size: 30px;
	
	
	text-color: black;
	text-alignment: under;
	text-size: 12;
	/* text-background-mode: plain; */

	stroke-mode: plain;
	stroke-color: white;
	stroke-width: 0px;
}

/*
   zusaetzliches Attribut "highlight" fuer einen Knoten, der
   hervorgehoben werden soll
*/
node.highlight {
	text-style: bold;
	
	stroke-color: #cc0000;
	stroke-width: 3px;
}

node.place {
	stroke-mode: plain;
	stroke-color: black;
	stroke-width: 2px;
}
node.transition {
	shape: box;
	fill-color: white;
	stroke-mode: plain;
	stroke-color: black;
	stroke-width: 1px;
}

node.marking {
	shape: box;
	size: 100px, 30px;
	text-alignment: center;
	fill-color: white;
	stroke-mode: plain;
	stroke-color: black;
	stroke-width: 1px;
}
node.markingroot {
	shape: box;
	size: 100px, 30px;
	text-alignment: center;
	/* fill-color: white; */
	stroke-mode: plain;
	/* stroke-color: red; */
	fill-color: red;
	stroke-color: black;
	stroke-width: 1px;
} 
node.rootinabort {
	shape: box;
	size: 100px, 30px;
	text-alignment: center;
	stroke-mode: plain;
	stroke-color: orange;
	fill-color: red;
	stroke-width: 1px;
}
node.abort {
	shape: box;
	size: 100px, 30px;
	text-alignment: center;
	fill-color: white;
	stroke-mode: plain;
	stroke-color: orange;
	stroke-width: 1px;
}
node.newlyadded {
	shape: box;
	size: 100px, 30px;
	text-alignment: center;
	fill-color: white;
	stroke-mode: plain;
	stroke-color: green;
	stroke-width: 1px;
}


node.marked {
	stroke-mode: plain;
	stroke-width: 1px;
	stroke-color: red;
	fill-color: white;
}

