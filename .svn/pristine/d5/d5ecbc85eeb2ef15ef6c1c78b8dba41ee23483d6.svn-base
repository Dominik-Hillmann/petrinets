/*
	Style-Angabe fuer eine Kante
*/
edge {
	fill-color: black;
	arrow-shape: arrow;
	arrow-size: 9px, 6px;
	text-size:  12;
	text-color: black;
	text-background-mode: plain;
	text-background-color: white;
}

edge.abort {
	fill-color: orange;
	arrow-shape: arrow;
	arrow-size: 9px, 6px;
	text-size:  12;
	text-color: black;
	text-background-mode: plain;
	text-background-color: white;
}

edge.newlyadded {
	fill-color: green;
	arrow-shape: arrow;
	arrow-size: 9px, 6px;
	text-size:  12;
	text-color: black;
	text-background-mode: plain;
	text-background-color: white;

}
